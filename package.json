{
  "name": "herebestories",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "nodemon server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cakebatterandsprinkles/herebestories.git"
  },
  "keywords": [
    "herebestories",
    "story",
    "prompt",
    "writing"
  ],
  "author": "yagmur cetin tas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cakebatterandsprinkles/herebestories/issues"
  },
  "homepage": "https://github.com/cakebatterandsprinkles/herebestories#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "gravatar": "^1.8.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.0-beta2",
    "mongoose": "^5.6.7",
    "request": "^2.88.0",
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.1"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-import": "^2.18.2"
  }
}
